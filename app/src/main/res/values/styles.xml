<resources>

    <!-- Base application theme. -->
    <style name="Theme.Pulzion18" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorPrimaryDark</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="Widget.Pulzion18.Cardview" parent="Widget.MaterialComponents.CardView">
        <item name="android:backgroundTint">@color/card_color</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="Widget.Shrine.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.Shrine.Backdrop" parent="">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:theme">@style/Theme.Pulzion18</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
    </style>

    <style name="Widget.Pulzion18.BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_bottom_sheet</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="Widget.Pulzion18.Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="android:padding">16dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="checkedIconEnabled">false</item>
        <item name="rippleColor">@color/dark_terra_cotta</item>
    </style>
</resources>
