<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SponsorsActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/txt_previous_sponsors"
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/philosopher"
        android:text="@string/previous_sponsors"
        android:textAlignment="center"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_sponsors"
        android:layout_width="344dp"
        android:layout_height="520dp"
        android:layout_marginTop="8dp"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/txt_previous_sponsors"
        tools:layout_editor_absoluteX="8dp" />

    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:indicatorColor="@color/colorAccent"
        app:indicatorName="BallScaleRippleMultipleIndicator"
        app:layout_constraintBottom_toTopOf="@+id/recycler_sponsors"
        app:layout_constraintEnd_toStartOf="@+id/recycler_sponsors"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/recycler_sponsors"
        app:layout_constraintTop_toBottomOf="@+id/recycler_sponsors" />
</android.support.constraint.ConstraintLayout>