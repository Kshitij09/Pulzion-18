<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nested_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="12dp"
    android:fillViewport="true"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/nested_scroll_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pasc" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASC is the PICT ACM Chapter. PASC has been recognised as best ACM student chapter this year. The PICT ACM Students Chapter (PASC) is the most active ACM chapter in the state of Maharashtra. PICT, being one of the best colleges in the state for Computer Engineering, PASC is a highly prestigious chapter. "
            android:textAppearance="@style/TextAppearance.Pulzion18.About" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="The chapter was started in March 2011 with a vision to realize the goals of ACM International at the grass-root level in PICT. We aim to provide opportunities to the students in the region in the form of rewarding interactions with peers and renowned experts in their respective fields of interest by organizing world-class seminars, lectures and workshops."
            android:textAppearance="@style/TextAppearance.Pulzion18.About" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="The chapter successfully conducts seminars and workshops in varied domains of Computer Science in the august presence of well-known speakers, which gives our students the opportunity to learn about advanced research in the subjects."
            android:textAppearance="@style/TextAppearance.Pulzion18.About" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Other activities undertaken by the chapter include hosting inter-collegiate events with technical and non-technical competitions, academia-industry initiatives towards the society and various ventures to promote sharing of knowledge and innovation."
            android:textAppearance="@style/TextAppearance.Pulzion18.About" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Contact No.:"
            android:textAppearance="@style/TextAppearance.Pulzion18.About" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:text="Shreya Narkar: 8055766444"
            android:textAppearance="@style/TextAppearance.Pulzion18.About"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pratik Patil: 7066510224"
            android:textAppearance="@style/TextAppearance.Pulzion18.About" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>